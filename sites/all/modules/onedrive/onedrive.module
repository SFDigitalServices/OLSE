/**
 *  utility function get get number superscript
 */
function onedrive_getNumberSuperscript($input){
    $ret = "th";
    if($input < 10 || $input > 20){
        switch($input % 10){
            case 1: $ret = "st"; break;
            case 2: $ret = "nd"; break;
            case 3: $ret = "rd"; break;
            default: $ret = "th"; break;
        }
    }
    return $ret;
}
