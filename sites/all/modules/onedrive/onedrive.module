/**
 *  Function connects to onedrive drive.
 */
function onedrive_gdrive_connect() {
    if ($path = libraries_get_path('onedrive-php-sdk-master')) {
        ini_set('include_path',ini_get('include_path').':' . $_SERVER['DOCUMENT_ROOT'] . '/olsecms/sites/all/libraries/onedrive-php-sdk-master/src/Krizalys/');
        require_once '../../vendor/autoload.php';
        require_once 'Onedrive/onedrive-config.php';
    }
    else {
        drupal_set_message('You need to install the onedrive api client library in the folder onedrive-api-php-client-git-version within the sites/all/libraries folder');
    }

    // Instantiates a OneDrive client bound to your OneDrive application
    $onedrive = new \Krizalys\Onedrive\Client(array(
        'client_id' => ONEDRIVE_CLIENT_ID
    ));

    // Gets a log in URL with sufficient privileges from the OneDrive API
    $callback_url = (!empty($_SERVER['HTTPS'])) ? "https://".$_SERVER['SERVER_NAME'].$_SERVER['REQUEST_URI'] : "http://".$_SERVER['SERVER_NAME'].$_SERVER['REQUEST_URI'];
    $url = $onedrive->getLogInUrl(array(
        'wl.signin',
        'wl.basic',
        'wl.contacts_skydrive',
        'wl.skydrive_update',
        'wl.offline_access'
    ),$callback_url );

    // Persist the OneDrive client' state for next API requests
    $_SESSION['onedrive.client.state'] = $onedrive->getState();

    // Guide the user to the log in URL (you may also use an HTTP/JS redirect)
    //echo "<a href='$url'>Next step</a>";
    drupal_goto($url, array('external' => True));
}

/** creates initial worksheet for payments
